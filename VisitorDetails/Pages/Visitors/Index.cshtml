</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].SiteCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].MobileTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].NumberOfGuests)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visitor[0].LeaveDate)
            </th>
