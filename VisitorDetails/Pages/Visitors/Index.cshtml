    <tbody>
@foreach (var item in Model.Visitor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiteCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfGuests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeaveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IPAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAgent)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VisitorID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VisitorID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VisitorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
